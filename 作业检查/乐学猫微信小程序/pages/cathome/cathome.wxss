.headerimage {
  width: 100%;
  height: 130rpx;
  position: relative;
}

.headerimage image:nth-child(1) {
  width: 100%;
  height: 130rpx;
}

.headerimage image:nth-child(2) {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  width: 160rpx;
  height: 60rpx;
}

.headerimage image:nth-child(3) {
  position: absolute;
  top: 40rpx;
  right: 140rpx;
  width: 40rpx;
  height: 50rpx;
}

.headerimage image:nth-child(4) {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 40rpx;
  height: 48rpx;
}

.header {
  width: 100%;
  height: 120rpx;
  background-color: skyblue;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.header li {
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  border-bottom: 8rpx solid #f15a24;
  color: #f15a24;
}

