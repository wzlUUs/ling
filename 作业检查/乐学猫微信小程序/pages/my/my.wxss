.zbox {
  background-color: #f7f7f7;
  width: 100%;
  height: 100vh;
}

.zbox .header {
  position: relative;
  background-color: white;
}

.zbox .header image {
  width: 100%;
  height: 400rpx;
}

.zbox .header .loginmbile {
  width: 300rpx;
  height: 240rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}

.zbox .header .loginmbile .loginimgs {
  width: 160rpx;
  height: 160rpx;
}

.zbox .header .loginmbile view {
  color: white;
  font-size: 48rpx;
}

.zbox .header .shezhi {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 40rpx;
}

.zbox .mbile {
  width: 100%;
  height: 180rpx;
  background-color: white;
  display: flex;
  padding-top: 20rpx;
}

.zbox .mbile li {
  width: 33%;
  height: 140rpx;
  text-align: center;
}

.zbox .mbile li image {
  width: 60rpx;
  height: 60rpx;
}

.zbox .mbile li view:nth-child(3) {
  font-size: 32rpx;
  color: gray;
}

.zbox .mbile li:nth-child(1) {
  border-right: 2rpx solid rgba(128, 128, 128, 0.315);
}

.zbox .mbile li:nth-child(2) {
  border-right: 2rpx solid rgba(128, 128, 128, 0.315);
}

.zbox .shoucang {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.zbox .shoucang li {
  width: 100%;
  height: 100rpx;
  background-color: white;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.zbox .shoucang li image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.zbox .shoucang li p {
  margin-left: -460rpx;
}

.zbox .shoucang li:nth-child(1) {
  border-bottom: 2rpx solid rgba(128, 128, 128, 0.288);
}

.zbox .shoucang li:nth-child(2) {
  border-bottom: 2rpx solid rgba(128, 128, 128, 0.288);
}

.zbox .shoucang li:nth-child(3) .youhui {
  margin-left: -430rpx;
}

.zbox .xiaoxi {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.zbox .xiaoxi li {
  width: 100%;
  height: 100rpx;
  background-color: white;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.zbox .xiaoxi li image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.zbox .xiaoxi li p {
  margin-left: -460rpx;
}

.zbox .xiaoxi li:nth-child(1) {
  border-bottom: 2rpx solid rgba(128, 128, 128, 0.288);
}
